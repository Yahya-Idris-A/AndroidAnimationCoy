<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="8dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Shoot"
        android:id="@+id/mid_btn"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/club_img"
        android:src="@drawable/club"
        android:alpha="0.2"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/img_net"
        android:src="@drawable/net"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/mid_btn"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/img_keeper"
        android:src="@drawable/kiper"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/img"
        android:layout_marginBottom="120dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img"
        android:src="@drawable/ball"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/mid_btn"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/text_img"
        android:src="@drawable/goal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/img_net"/>

</RelativeLayout>